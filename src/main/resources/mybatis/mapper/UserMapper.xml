<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.mapper.UserMapper">

    <resultMap id="resultListUser" type="com.it.domian.User">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="sex" column="sex"></result>
        <result property="phone" column="phone"></result>
        <result property="shenfen" column="shenfen"></result>
        <association property="account" column="account_id" select="com.it.mapper.AccountMapper.getAc"
                     javaType="com.it.domian.Account"/>
    </resultMap>

    <select id="getAllUser" resultMap="resultListUser">
        select * from tbl_user;
    </select>
</mapper>